{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react-hooks/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off"
  },
  "globals": {
    "vi": true,
    "it": true,
    "expect": true,
    "describe": true
  },
  "overrides": [
    {
      "files": [
        "**/*.test.tsx"
      ],
      "env": {
        "browser": true
      },
      "parserOptions": {
        "project": "./tsconfig.vitest.json"
      }
    }
  ]
}
